<job id="nablarch-integration" xmlns="https://jakarta.ee/xml/ns/jakartaee" version="2.0">
  <listeners>
    <listener ref="nablarchJobListenerExecutor">
      <properties>
        <property name="diConfigFilePath" value="integration-test/jbatch.xml" />
      </properties>
    </listener>
  </listeners>
  
  <step id="batchlet">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
    </listeners>
    <batchlet ref="nablarchIntegrationBatchlet">
      <properties>
        <property name="errorMode" value="#{jobParameters['errorMode']}" />
      </properties>
    </batchlet>
  </step>
</job>