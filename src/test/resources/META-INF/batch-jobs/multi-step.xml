<job id="multi-step" xmlns="https://jakarta.ee/xml/ns/jakartaee" version="2.0">
  <listeners>
    <listener ref="nablarchJobListenerExecutor">
      <properties>
        <property name="diConfigFilePath" value="integration-test/jbatch.xml" />
      </properties>
    </listener>
  </listeners>

  <step id="batchlet" next="chunk">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
    </listeners>
    <batchlet ref="doubleBatchlet" />
  </step>

  <step id="chunk">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="nablarchItemWriteListenerExecutor" />
    </listeners>
    <chunk item-count="60">
      <reader ref="simpleReader" />
      <processor ref="simpleProcessor" />
      <writer ref="simpleWriter" />
    </chunk>
  </step>
</job>