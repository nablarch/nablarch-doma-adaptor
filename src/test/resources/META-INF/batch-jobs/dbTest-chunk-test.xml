<job id="dbTest-chunk-test" xmlns="http://xmlns.jcp.org/xml/ns/javaee" version="1.0">
  <listeners>
    <listener ref="nablarchJobListenerExecutor">
      <properties>
        <property name="diConfigFilePath" value="integration-test/jbatch.xml" />
      </properties>
    </listener>
  </listeners>

  <step id="step1">
    <listeners>
      <listener ref="nablarchStepListenerExecutor" />
      <listener ref="nablarchItemWriteListenerExecutor" />
    </listeners>
    <chunk item-count="5">
      <reader ref="dbTestItemReader"/>
      <writer ref="dbTestItemWriter">
        <properties>
          <property name="isError" value="false"/>
        </properties>
      </writer>
    </chunk>
  </step>
</job>